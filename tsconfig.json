{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["dom", "esnext"],
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./app/*"],
      "@@/*": ["./*"],
      "~/*": ["./app/*"],
      "~~/*": ["./*"]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "@nuxt/http"
    ]
  }
}
